var gr = new GlideRecord('x_77597_smart_scho_student_register');
gr.addQuery('u_class_year', current.year_class);
gr.query();
while (gr.next()){
	studentList.push(gr.sys_id.toString());
}
gs.info(studentList);

for (var i = 0; i < studentList.length; i++){
	var grs = new GlideRecord ('x_77597_smart_scho_mark_attendance');
	grs.initialize();
	grs.number = current.sys_id;
	grs.student_name = studentList[i];
	grs.insert();
}

gs.setRedirect(current);  
